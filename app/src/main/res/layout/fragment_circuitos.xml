
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- TÃ­tulo -->
    <TextView
        android:id="@+id/textViewTituloCircuito"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Circuito de Entrenamiento"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="16dp" />

    <!-- Grid de ImageViews (3x3) -->
    <GridLayout
        android:id="@+id/gridLayoutCircuito"
        android:layout_width="match_parent"
        android:layout_height="675dp"
        android:layout_below="@id/textViewTituloCircuito"
        android:columnCount="3"
        android:padding="16dp"
        android:rowCount="3">

        <!-- Primera fila -->
        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="16dp"
            android:layout_height="89dp"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/tu_imagen_1" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="15dp"
            android:layout_height="94dp"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/tu_imagen_2" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/tu_imagen_3" />

        <!-- Segunda fila -->
        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="22dp"
            android:layout_height="95dp"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/tu_imagen_4" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/tu_imagen_5" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/tu_imagen_6" />

        <!-- Tercera fila -->
        <!-- Segunda fila -->
        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="79dp"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/tu_imagen_4" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/tu_imagen_5" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/tu_imagen_6" />

    </GridLayout>

</RelativeLayout>
